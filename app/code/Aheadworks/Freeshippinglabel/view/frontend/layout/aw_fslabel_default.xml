        <referenceContainer name="content.top">
            <block class="Aheadworks\Freeshippinglabel\Block\Label" name="aw_fslabel_content_top" as="aw_fslabel_content_top" before="-" />
        </referenceContainer>
        <referenceContainer name="content.aside">
            <block class="Aheadworks\Freeshippinglabel\Block\Label" name="aw_fslabel_content_bottom" as="aw_fslabel_content_bottom"  after="-" />
        </referenceContainer>
        <referenceContainer name="footer">
            <block class="Aheadworks\Freeshippinglabel\Block\Label" name="aw_fslabel_page_bottom" as="aw_fslabel_page_bottom" after="-" />
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Aheadworks\Freeshippinglabel\Block\Label" name="aw_fslabel_page_bottom_fixed" as="aw_fslabel_page_bottom_fixed" after="-" />
