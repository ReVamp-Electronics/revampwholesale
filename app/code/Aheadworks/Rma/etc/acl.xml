<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Aheadworks_Rma::home" title="RMA by aheadWorks" sortOrder="100">
                        <resource id="Aheadworks_Rma::manage_rma" title="Manage RMA" sortOrder="10" />
                        <resource id="Aheadworks_Rma::statuses" title="Statuses and Email Templates" sortOrder="20" />
