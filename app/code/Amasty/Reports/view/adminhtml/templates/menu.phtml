<?php /** @var \Amasty\Reports\Block\Adminhtml\Menu $block */ ?>
<div class="amreports-menu">
<?php foreach ($block->getMenu() as $group): ?>
    <div class="amreports-menu-item level-0<?php if (isset($group['active'])): ?> active<?php endif ?>">
