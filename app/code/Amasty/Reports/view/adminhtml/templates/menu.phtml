        <?php else: ?>
        <div class="label"><?= $group['title'] ?></div>
        <?php endif ?>

        <?php foreach ($group['children'] as $child): ?>
        <div class="amreports-menu-item level-1<?php if (isset($child['active'])): ?> active<?php endif ?>">
            <?php if (isset($child['url'])): ?>
                <a href="<?= $block->getUrl($child['url'])?>"><?= $child['title'] ?></a>
            <?php else: ?>
                <?= $child['title'] ?>
            <?php endif ?>
        </div>
        <?php endforeach; ?>
    </div>
<?php endforeach; ?>
</div>
